<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/profileFragment">
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.profile.presentation.view.ProfileFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/newsFragment"
        android:name="com.example.projectjavasimba.presentation.newsFragment.view.NewsFragment"
        android:label="fragment_news"
        tools:layout="@layout/fragment_news" >
        <action
            android:id="@+id/action_newsFragment2_to_filterFragment"
            app:destination="@id/filterFragment" />
        <action
            android:id="@+id/action_newsFragment2_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.projectjavasimba.presentation.detailNewsFragment.view.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >

        <argument
            android:name="event"
            app:argType="com.example.core.entity.EventEntity" />
    </fragment>
    <fragment
        android:id="@+id/filterFragment"
        android:name="com.example.projectjavasimba.presentation.filterFragment.view.FilterFragment"
        android:label="fragment_filter"
        tools:layout="@layout/fragment_filter" />

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.search.presentation.searchFragment.view.SearchFragment"
        android:label="@string/search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/helpFragment"
        android:name="com.example.projectjavasimba.presentation.helpFragment.view.HelpFragment"
        android:label="fragment_helpragment"
        tools:layout="@layout/fragment_helpragment" />
</navigation>
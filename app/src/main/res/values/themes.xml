<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProjectJavaSimba" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_color</item>
        <item name="colorPrimaryVariant">@color/bolotny_green_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/green_color</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <style name="DefaultText">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_3000000</item>
        <item name="android:textSize">@dimen/default_size_text</item>
    </style>

    <style name="Placeholder">
        <item name="android:background">@drawable/bg_placeholder</item>
    </style>

    <style name="Placeholder.TextSize18" parent="Placeholder">
        <item name="android:layout_height">28dp</item>
    </style>

    <style name="Placeholder.TextSize12" parent="Placeholder">
        <item name="android:layout_height">19dp</item>
    </style>

    <style name="Placeholder.TextSize10" parent="Placeholder">
        <item name="android:layout_height">15dp</item>
    </style>

    <style name="Placeholder.TextSize15" parent="Placeholder">
        <item name="android:layout_height">23dp</item>
    </style>

    <style name="Placeholder.EditText" parent="Placeholder">
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="VerticalGuideline">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="HorizontalGuideline">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>

